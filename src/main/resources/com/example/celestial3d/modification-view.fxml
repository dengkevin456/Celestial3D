                        <Label text="Celestial body radius:">
                           <font>
                              <Font name="Arial Black" size="17.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
                  <HBox fx:id="massHBox" alignment="CENTER" layoutX="10.0" layoutY="48.0" spacing="10.0">
