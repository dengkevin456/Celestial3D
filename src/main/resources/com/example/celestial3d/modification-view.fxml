                     <font>
                        <Font name="Arial Bold" size="11.0" />
                     </font>
                  </CheckBox>
                  <HBox fx:id="yPositionHBox" alignment="CENTER" layoutX="10.0" layoutY="10.0" spacing="10.0">
                     <children>
                        <Label text="Y position:">
                           <font>
                              <Font name="Arial Black" size="17.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
                  <CheckBox fx:id="keeppositionZCheckBox" alignment="CENTER" mnemonicParsing="false" text="Keep position z">
                     <font>
                        <Font name="Arial Bold" size="11.0" />
                     </font>
                  </CheckBox>
                  <HBox fx:id="zPositionHBox" alignment="CENTER" layoutX="10.0" layoutY="36.0" spacing="10.0">
                     <children>
                        <Label text="Z position:">
                           <font>
                              <Font name="Arial Black" size="17.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
                  <Separator prefWidth="200.0" />
                  <CheckBox fx:id="keepspeedXCheckBox" alignment="CENTER" layoutX="136.0" layoutY="100.0" mnemonicParsing="false" text="Keep X speed">
                     <font>
                        <Font name="Arial Bold" size="11.0" />
                     </font>
                  </CheckBox>
                  <HBox alignment="CENTER" layoutX="10.0" layoutY="62.0" spacing="10.0" fx:id="xSpeedHBox">
                     <children>
                        <Label text="X speed:">
                           <font>
                              <Font name="Arial Black" size="17.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
                  <CheckBox fx:id="keepspeedYCheckBox" alignment="CENTER" layoutX="160.0" layoutY="229.0" mnemonicParsing="false" text="Keep Y speed">
                     <font>
                        <Font name="Arial Bold" size="11.0" />
                     </font>
                  </CheckBox>
                  <HBox fx:id="ySpeedHBox" alignment="CENTER" layoutX="10.0" layoutY="91.0" spacing="10.0">
                     <children>
                        <Label text="Y speed:">
                           <font>
