               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
            <VBox fx:id="modificationVBox" alignment="TOP_CENTER">
               <children>
                  <HBox alignment="CENTER" layoutX="10.0" layoutY="10.0" spacing="10.0">
                     <children>
                        <Label text="Celestial body name:">
                           <font>
                              <Font name="Arial Black" size="17.0" />
                           </font>
                        </Label>
                        <TextField fx:id="celestialBodyNameTextField" maxWidth="200.0">
                           <HBox.margin>
                              <Insets bottom="5.0" top="5.0" />
                           </HBox.margin>
                        </TextField>
                     </children>
                  </HBox>
                  <HBox fx:id="celestialBodyColorHBox" alignment="CENTER" spacing="8.0">
                     <children>
                        <Label text="Celestial body color:">
                           <font>
                              <Font name="System Bold" size="15.0" />
                           </font>
                        </Label>
                        <ColorPicker fx:id="colorPicker" />
                     </children>
                  </HBox>
                  <HBox fx:id="radiusHBox" alignment="CENTER" layoutX="10.0" layoutY="10.0" spacing="10.0">
